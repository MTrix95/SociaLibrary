<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook" />

    <appender class="ch.qos.logback.core.ConsoleAppender" name="consoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>[%d{dd-MM-yyyy HH:mm:ss}] [${project.artifactId}] [%thread] [%-5level] [%logger{35}] - %msg%n%throwable</Pattern>
        </encoder>
    </appender>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
        <file>${SHARED_DATA_LOGS}/${project.artifactId}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/${project.artifactId}_%d{yyyy-MM-dd}.%i.log.tar.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <!-- Quando arriva a 10MB lo comprime, è crea un file vuoto! -->
            <maxHistory>2</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
            <!-- non mi devi occupare più di tot. giga -->
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>[%d{dd-MM-yyyy HH:mm:ss}] [${project.artifactId}] [%thread] [%-5level] [%logger{35}] - %msg%n%throwable</Pattern>
        </encoder>
    </appender>

    <!-- Appender asincroni di default -->
    <appender class="ch.qos.logback.classic.AsyncAppender" name="ASYNC_consoleAppender">
        <queueSize>262144</queueSize>
        <appender-ref ref="consoleAppender" />
    </appender>

    <appender class="ch.qos.logback.classic.AsyncAppender" name="ASYNC_FILE">
        <queueSize>262144</queueSize>
        <appender-ref ref="FILE" />
    </appender>

    <!-- La root info per i log -->
    <root level="INFO">
        <appender-ref ref="ASYNC_consoleAppender" />
        <appender-ref ref="ASYNC_FILE" />
    </root>

</configuration>